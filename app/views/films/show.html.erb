<div class="col-md-12">
  <div class="group">

    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@film) %>
        <label class="label label-success"> 该电影评论区成员 </label>
        <%= link_to("退出讨论", quit_film_path(@film), method: :post, class: "btn btn-default") %>
      <% else %>
        <label class="label label-warning"> 不是该电影评论区成员 </label>
        <%= link_to("加入讨论", join_film_path(@film), method: :post, class: "btn btn-default") %>
      <% end %>
    </span>

    <%= link_to("添加评论", new_film_review_path(@film), class: "btn btn-default pull-right") %>

    <% if current_user && current_user == @film.user %>
      <%= link_to("编辑", edit_film_path(@film), class: "btn btn-primary pull-right") %>
    <% end %>
  </div>
  <h2><%= @film.title %></h2>
  <p><%= @film.description %></p>

  <table class="table">
    <thead>
      <tr>
        <th>评论内容</th>
        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.content %></td>
          <td><%= review.user.email %></td>
          <td><%= review.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate @reviews %>
  </div>
</div>
