<div class="col-md-12">

  <h2 class="text-center"> 我加入的电影讨论区 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> 标题 </th>
        <th> 叙述 </th>
        <th> 评论次数 </th>
        <th> 更新时间 </th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |film| %>
        <tr>
          <td> # </td>
          <td><%= link_to(film.title, film_path(film)) %></td>
          <td><%= film.description %></td>
          <td><%= film.reviews.count %></td>
          <td><%= film.updated_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
